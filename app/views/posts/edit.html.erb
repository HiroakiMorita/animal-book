<%=render '/layouts/header'%>

<div class="new">
  <div class="new-body">
    <div class="">
      <%= form_with(url: post_path , method: :patch, local:true) do |f| %>
        <h3 class="text-center">
          編集する
        </h3>
        <div class="mx-auto jutify-content-center text-center">
          <div class="w-50 edit-picture" style="background-image:url(<%= @post.image %>)"></div>
          <%= f.text_field :animal, value:@post.animal, class:"form-name w-75", id:"animal" %>
          <%= f.text_field :habitat, value:@post.habitat, class:"form-habitat w-75", id:"habitat" %>
          <%= f.text_area :detail, value:@post.detail, class:"form-detail w-75", id:"detail" %>
          <input type="submit" value="SENT" class="btn btn-primary center-block w-75">
        </div>
      <% end %>
    </div>
  </div>
</div>


<%=render '/layouts/footer'%>