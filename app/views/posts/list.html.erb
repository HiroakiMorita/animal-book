<%=render '/layouts/header'%>

<div class="animals row">
  <h3 class="head-title pt-3 text-center pb-3 col-12">みんなの投稿一覧</h3>
  <% @posts.each do |post| %>
  <div class="row animal col-6">
    <div class="animal-photo col-5">
      <%= link_to post_path(post) do %>
        <div class="animal-photo-link-pic"style="background-image:url(<%= post.image %>)"></div>
      <% end %>
    </div>
    <div class="animal-info col-6">
      <div class="animal-info-animal py-3 pl-3">
          <p class="animal-info-habitat-text">
            名前：<%= post.animal %>
          </p>
      </div>

      <div class="animal-info-habitat py-3 pl-3">
          <p class="animal-info-habitat-text">
            生息：<%= post.habitat %>
          </p>
      </div>

      <div class="animal-info-detail py-3 pl-3">
          <p class="animal-info-detail-text">
            特徴  ：<%= post.detail %>
          </p>
      </div>
    </div>
    <ul class="favbar row">
      <button type="button" class="btn btn-primary ml-5 disabled">ミタイ</button>
      <li class="ml-3 my-auto"><%= post.likes.count %>件</li>
    </ul>
  </div>
  <% end %>
</div>

<div class="pagenate mt-4 text-center">
  <%= paginate @posts %>
  <%= page_entries_info @posts %>
</div>

<div class="list-footer pb-5 pt-5">
  <p class="footer-text mb-0">Animal Book  @2019</p>
</div>
